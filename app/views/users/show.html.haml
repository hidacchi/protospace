.container.user-page
  %header.user-nav
    .media
      .media-left
        - if @user.avatar?
          = image_tag(@user.avatar, alt: "64*64", class: "media-object", style: "width: 64px; height: 64px;", data:{ src: "holder.js/64x64" }, data:{ holder:{ rendered: "true"} })
        - else
          = image_tag "no_img.png"
      .media-body
        %h4#top-aligned-media.media-heading
          = @user.name
          %span.label.label-default.project-number
            29
            %i Projects
        .proto-user
          %span.degree
            = @user.member
        .row
          .col-md-6
            %h4 Profile
            %p
              = @user.profile
          .col-md-6
            %h4 Works
            %p
              = @user.works
.container.proto-list
  .row
  - @prototypes.each do |prototype|
    .col-sm-4.col-md-3.proto-content
      .thumbnail
        - if prototype.thumbnails.present?
          = link_to image_tag(prototype.thumbnails.main.first.image), prototype_path(prototype.id)
        - else
          = link_to image_tag("no_img.png"), prototype_path(prototype.id)
          .caption
            %h3
              = link_to prototype.title, prototype_path(prototype.id)
            .proto-meta
              .proto-user
                = link_to "by #{prototype.user.name}", user_registration_path(prototype.user_id)
              .proto-posted
                = prototype.created_at
            %ul.proto-tag-list.list-inline
              %li
                = link_to "iPad", prototype_path(prototype.id), class: 'btn btn-default'
.text-center
  = paginate @prototypes