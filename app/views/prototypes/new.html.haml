= form_for @prototype, html: {class: 'container proto-new'} do |f|
  .col-md-8.col-md-offset-2
    %header.row.user-nav.row
      .col-md-12
        = f.text_field :title, placeholder: "Title", class: 'proto-new-title'
    .row
      .col-md-12
        .cover-image-upload#upload-main
          = f.fields_for :thumbnails do |thumbnail|
            = thumbnail.file_field :image
            = thumbnail.hidden_field :status, value: :main
      .col-md-12
        %ul.proto-sub-list.list-group
          %li.list-group-item.col-md-4
            .image-upload#upload-sub1
              = f.fields_for :thumbnails do |thumbnail|
                = thumbnail.file_field :image
                = thumbnail.hidden_field :status, value: :sub
          %li.list-group-item.col-md-4
            .image-upload#upload-sub2
              = f.fields_for :thumbnails do |thumbnail|
                = thumbnail.file_field :image
                = thumbnail.hidden_field :status, value: :sub
          %li.list-group-item.col-md-4
            .image-upload-plus
              %span +
    .row.proto-description
      .col-md-12
        = f.text_field :catchcopy, placeholder: 'Catchcopy'
      .col-md-12
        = f.text_area :concept, placeholder: 'Concept'
      .col-md-12
        %h4 Tag List
        .row
          .col-md-3
            = text_field_tag 'prototype[tag][]','', placeholder: 'TAG名1'
            / %input{type: "text", placeholder: "TAG名"}/
          .col-md-3
            = text_field_tag 'prototype[tag][]','', placeholder: 'TAG名2'
            / %input{type: "text", placeholder: "TAG名"}/
          .col-md-3
            = text_field_tag 'prototype[tag][]','', placeholder: 'TAG名3'
            / %input{type: "text", placeholder: "TAG名"}/
    .row.text-center.proto-btn
      = f.submit 'Publish', class: 'btn btn-lg btn-primary btn-block'
